{
  "manifest_version": 3,
  "name": "AI PR Generator",
  "description": "Generate GitHub PR titles and descriptions using OpenAI",
  "version": "1.1",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://github.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/compare/*"],
      "js": ["content.js"]
    }
  ]
}
